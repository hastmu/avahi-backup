#!/bin/bash

echo "$0 : $@"

# reloading systemd services
systemctl daemon-reload

echo "========================================================="
echo "* Avahi-Backup Client"
echo "* Please configure /etc/avahi-backup.d"
echo "========================================================="

systemctl enable avahi-backup-client.service

systemctl restart avahi-backup-client.service
systemctl status --no-pager avahi-backup-client.service


exit 0